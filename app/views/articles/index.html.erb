<h1>All Articals list</h1>

<%= link_to "Create new article", new_article_path %>

<br>

<table>
    <tr>
        <th>
            Title
        </th>
        <th>
            Description 
        </th>
    </tr>


    <% @article.each do |t| %>
    <tr>
        <td>
            <%= t.title %>
        </td>
        <td>
            <%= t.description %>
        </td>

        <td>   
            <%= link_to "Edit", edit_article_path(t) %>
        </td>
        <td>   
            <%= link_to "Show", article_path(t) %>
        </td>
        <td>   
            <%= link_to "Delete", article_path(t), method: :delete, data: {confrim: "Are you sure? "} %>
        </td>
    </tr>
    <% end %>
</table>